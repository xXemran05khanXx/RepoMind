# Environment Variables Example for RepoMind (aligning towards repomind target)

# Postgres / Neon
DATABASE_URL="postgres://user:password@host:5432/dbname"

# GitHub OAuth (current implementation uses manual token exchange)
GITHUB_CLIENT_ID="your_github_oauth_app_client_id"
GITHUB_CLIENT_SECRET="your_github_oauth_app_client_secret"

# (Optional) Personal Access Token fallback if needed
GITHUB_TOKEN="ghp_personal_access_token_if_required"

# OpenAI API
OPENAI_API_KEY="sk-your-openai-key"

# Future (repomind uses Gemini + Pinecone; placeholders for later phases)
GEMINI_API_KEY=""
PINECONE_API_KEY=""
PINECONE_INDEX_NAME="repomind"
PINECONE_ENVIRONMENT="us-east-1"

# App Base URL
APP_BASE_URL="http://localhost:5000"

# Session secret if session middleware is added later
SESSION_SECRET="replace-with-random-string"
